<html>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Neucha&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <a href="/">Dida's Store</a>
    <div class="detail-container">
      <% if(product !== undefined ){ %>
      <div class="detail-left-container">
        <h2><%= product.product_name %></h2>
        <img
          class="product-detail-img"
          src="<%= product.image %>"
          alt="<%= product.product_name %>"
        />
        <p>Price: $<%= product.price %></p>
        <button class="blue-btn">Add to Cart</button>
      </div>
      <div class="detail-right-container">
        <p>Description: <%= product.description %></p>
        <a class="blue-btn" href="/product/edit/<%= product.product_id %>"
          >Edit Product</a
        >
        <form action="/product/delete/<%= product.product_id %>" method="post">
          <input
            type="hidden"
            value="<%= product.product_id %>"
            name="product_id"
          />
          <button type="submit" class="blue-btn delete">Delete Product</button>
        </form>
      </div>
      <% } %>
    </div>
  </body>
</html>
